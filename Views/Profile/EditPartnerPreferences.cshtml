@model testapp1.Models.PartnerPreference
@{
    ViewData["Title"] = "Edit Partner Preferences";
}

<style>
    .edit-section {
        background: #fff;
        border: 1px solid #e0e0e0;
        margin-bottom: 20px;
        padding: 20px;
    }
    .form-group {
        margin-bottom: 15px;
    }
    .form-label {
        font-weight: 500;
        color: #333;
        margin-bottom: 5px;
    }
</style>

<div class="container mt-4">
    <h2>Edit Partner Preferences</h2>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">@TempData["SuccessMessage"]</div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">@TempData["ErrorMessage"]</div>
    }

    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger">
            <ul class="mb-0">
                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <li>@error.ErrorMessage</li>
                }
            </ul>
        </div>
    }

    <form method="post" asp-action="EditPartnerPreferences">
        <input type="hidden" asp-for="UserId" />
        @Html.AntiForgeryToken()

        <div class="edit-section">
            <h4>Basic Info</h4>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="form-label">Preferred Gender</label>
                        <select asp-for="PreferredGender" class="form-select">
                            <option value="any">Any</option>
                            <option value="Male">Male</option>
                            <option value="Female">Female</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="form-label">Age Range (Min)</label>
                        <input asp-for="AgeMin" class="form-control" type="number" min="18" max="100" />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="form-label">Age Range (Max)</label>
                        <input asp-for="AgeMax" class="form-control" type="number" min="18" max="100" />
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="form-label">Height Range (Min cm)</label>
                        <input asp-for="HeightMinCm" class="form-control" type="number" min="100" max="250" />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="form-label">Height Range (Max cm)</label>
                        <input asp-for="HeightMaxCm" class="form-control" type="number" min="100" max="250" />
                    </div>
                </div>
            </div>
        </div>

        <div class="edit-section">
            <h4>Education & Career</h4>
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <label class="form-label">Income Currency</label>
                        <select asp-for="IncomeCurrency" class="form-select">
                            <option value="">Select</option>
                            <option value="USD">USD</option>
                            <option value="AUD">AUD</option>
                            <option value="INR">INR</option>
                            <option value="EUR">EUR</option>
                            <option value="GBP">GBP</option>
                        </select>
                    </div>
                </div>
                <div class="col-md-8">
                    <div class="form-group">
                        <label class="form-label">Minimum Income</label>
                        <input asp-for="IncomeMin" class="form-control" type="number" step="0.01" placeholder="Minimum annual income" />
                    </div>
                </div>
            </div>
        </div>

        <div class="edit-section">
            <h4>Other Requirements</h4>
            <div class="form-group">
                <label class="form-label">Additional Requirements</label>
                <textarea asp-for="OtherRequirements" class="form-control" rows="4" placeholder="Any other specific requirements..."></textarea>
            </div>
        </div>

        <div class="mt-4">
            <button type="submit" class="btn btn-primary">Save Preferences</button>
            <a href="@Url.Action("Index")" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}




