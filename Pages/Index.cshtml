@page
@model IndexModel
@{
    ViewData["Title"] = "Home - MatchCircle";
}

<div class="hero-section bg-primary text-white py-5 mb-5">
    <div class="container text-center">
        <h1 class="display-4 mb-3">Find Your Perfect Match</h1>
        <p class="lead mb-4">Join thousands of happy couples who found their life partners through our platform</p>
        <div class="home-actions">
            <a href="/Register" class="btn btn-light btn-lg me-3">Create Free Profile</a>
            <a href="/Login" class="btn btn-outline-light btn-lg">Login</a>
        </div>
    </div>
</div>

<div class="container">
    <div class="row mb-5">
        <div class="col-md-4 text-center mb-4">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <i class="fas fa-user-check fa-3x text-primary mb-3"></i>
                    <h4>Verified Profiles</h4>
                    <p>All profiles are verified for authenticity and safety</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 text-center mb-4">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <i class="fas fa-search fa-3x text-primary mb-3"></i>
                    <h4>Advanced Search</h4>
                    <p>Find matches based on your preferences and criteria</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 text-center mb-4">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <i class="fas fa-shield-alt fa-3x text-primary mb-3"></i>
                    <h4>Safe & Secure</h4>
                    <p>Your privacy and security are our top priorities</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12 text-center">
            <h3 class="mb-4">Ready to Start Your Journey?</h3>
            <a href="/Register" class="btn btn-primary btn-lg">Get Started Now</a>
        </div>
    </div>
</div>
